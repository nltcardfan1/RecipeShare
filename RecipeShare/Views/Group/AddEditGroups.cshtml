

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width"/>
	<title>EditGroups</title>
</head>
@Scripts.Render("~/KOScripts/Groups.js")
<body>
	<h3>
		Editing Group <strong data-bind="text:name"></strong>
	</h3>
	<div>
		<div class=" col-md-4">
			<div class="form-group">
				<label>Name:</label>
				<input type="text" class="form-control" data-bind="textInput: name"/>
			</div>
		</div>

		<form data-bind="submit:addMember">
			Add item: <input type="text" data-bind='value:memberToAdd, valueUpdate: "afterkeydown"'/>
			<button type="submit" data-bind="enable: memberToAdd().length > 0">Add</button>
		</form>

		<p>Your values:</p>
		<select multiple="multiple" height="5" data-bind="options:members, selectedOptions:selectedItems"> </select>

		@*<div>
			<button data-bind="click: removeSelected, enable: selectedItems().length > 0">Remove</button>
			<button data-bind="click: sortItems, enable: allItems().length > 1">Sort</button>
		</div>*@
	</div>
	<div class="clearfix"></div>
</body>
</html>
